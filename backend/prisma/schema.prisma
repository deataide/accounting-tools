generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  password     String
  cnpj         String?
  cpf          String?
  clients      Client[]
  createdAt    DateTime @default(now())
  refreshToken String? 
  approved     Boolean @default(false)
  admin        Boolean @default(false)

  @@map("users")
}

model Client {
  id                Int            @id @default(autoincrement())
  name              String
  cnpj              String?
  cpf               String?
  stateRegistration String?
  antecipations     Antecipation[]

  master   User   @relation(fields: [masterId], references: [id])
  masterId String

  @@map("clients")
}

model Antecipation {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  pdfPath   String
  client    Client   @relation(fields: [clientId], references: [id])
  clientId  Int

  @@map("antecipations")
}
